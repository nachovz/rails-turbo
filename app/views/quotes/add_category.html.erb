<%= turbo_frame_tag "add_category" do %>
	<%= form_with(model: @quote, url: add_category_post_path, method: "post", class: "flex gap-2" ) do |f| %>
		<%= f.collection_select :category_id, @filtered_categories, :id, :name %>
		<%= f.submit "Add", class: "px-3 py-2 font-bold text-center rounded-md text-white hover:text-white bg-green-500 hover:bg-green-600"%>
		<%= link_to "X", url_for(:back), class: "px-3 py-2 inline-block rounded-md font-bold border border-solid bg-red-500 text-white hover:text-white hover:bg-red-600 " %>
	<% end %>
<% end %>